<h1>Selected Movie</h1>
 <div id="main">
  <% film = @film %>
  <div class="film" style="margin: auto; float:none;">
    <div id="poster">
    <%= image_tag film.Poster %>
    </div>
    <div id="info">
    <div id="title">
      <%= link_to film.Title, "http://imdb.com/title/"+film.ImdbID %>
    </div>
    <div id="released">
      <%= film.formatdate %>
    </div>
    <div id="rating">
      <%= film.ImdbRating %>/10
    </div>
    <div class="names">
      <%= film.Director %>
    </div>
    <div class="names">
      <%= film.Actors %>
    </div>
    
    <div id="plot">
      <%= film.Plot %>
    </div>
    </div>
  </div>

</div>

